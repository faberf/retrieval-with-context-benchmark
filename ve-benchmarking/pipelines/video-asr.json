{
  "schema": "ptt",
  "context": {
    "contentFactory": "CachedContentFactory",
    "resolverName": "disk",
    "local": {
      "content": {
        "path": "../cache"
      },
      "enumerator": {
        "path": "../benchmark/media_objects",
        "depth": "5"
      },
      "filter": {
        "type": "SOURCE:VIDEO"
      },
      "short_decoder": {
        "timeWindowMs": "5000"
      },
      "long_decoder": {
        "timeWindowMs": "10000"
      }
    }
  },
  "operators": {
    "enumerator": {
      "type": "ENUMERATOR",
      "factory": "FileSystemEnumerator",
      "mediaTypes": [
        "VIDEO"
      ]
    },
    "file_metadata":{
      "type": "EXTRACTOR",
      "fieldName": "file"
    },
    "short_decoder": {
      "type": "DECODER",
      "factory": "VideoDecoder"
    },
    "long_decoder": {
      "type": "DECODER",
      "factory": "VideoDecoder"
    },
    "selector": {
      "type": "TRANSFORMER",
      "factory": "LastContentAggregator"
    },
    "time":{
      "type": "EXTRACTOR",
      "fieldName": "time"
    },
    "clip": {
      "type": "EXTRACTOR",
      "fieldName": "clip"
    },
    "asr": {
      "type": "EXTRACTOR",
      "fieldName": "asr"
    },
    "caption": {
      "type": "EXTRACTOR",
      "fieldName": "caption"
    },
    "ocr": {
      "type": "EXTRACTOR",
      "fieldName": "ocr"
    },
    "filter": {
      "type": "TRANSFORMER",
      "factory": "TypeFilterTransformer"
    }
  },
  "operations": {
    "enumerator-stage": {"operator": "enumerator"},
    "long-decoder-stage": {"operator": "long_decoder","inputs": ["enumerator-stage"]},
    "file-metadata-stage": {"operator": "file_metadata","inputs": ["long-decoder-stage"]},
    "time-stage": {"operator": "time","inputs": ["long-decoder-stage"]},
    "asr-stage": {"operator": "asr", "inputs": ["long-decoder-stage"]},
    "filter-stage": {"operator": "filter","inputs": ["time-stage", "asr-stage"], "merge": "COMBINE"}
},
  "output": [
    "filter-stage"
  ]
}
